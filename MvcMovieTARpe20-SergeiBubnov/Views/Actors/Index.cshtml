@model MvcMovieTARpe20_SergeiBubnov.Models.ActorsViewModel

@{
    ViewData["Title"] = "Actors";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add</a>
</p>

<form asp-controller="Actors" asp-action="Index" method="get">
    <p>
        <select asp-for="BirthYear" asp-items="Model.BirthYears">
            <option value="">All</option>
        </select>

        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Actors[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors[0].PlaceOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors[0].Born)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors[0].BeginningOfCarrier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Actors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Born)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginningOfCarrier)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
